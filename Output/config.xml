<!-- Config file for the game -->
<!-- L01: DONE 1: Create configuration file-->
<config>
  <app framerate_cap="60">
    <title>PlatformerGame</title>
    <organization>UPC</organization>
	<savefile path="savegame.xml"/>
  </app>

  <renderer>
    <vsync value="true"/>
  </renderer>

  <window>
    <resolution width="960" height="720" scale="2"/>
    <fullscreen value="false"/>
    <borderless value="false"/>
    <resizable value="false"/>
    <fullscreen_window value="false"/>
  </window>
 <player>
  	<texture>Assets/textures/Main Characters/Virtual Guy/SpriteSheet.png</texture>
  	<movement gravity="2100" jumpForce="500" speed="220" maxJumps="2"/>
	<audio jump="Assets/Audio/fx/jump.wav" doubleJump="Assets/Audio/fx/double_jump.wav" gameOver="Assets/Audio/fx/game_over.wav" gameStart="Assets/audio/fx/game_start.wav"/>
  </player>
  <!-- L03: Added maps folder as config option -->
  <map>
    <folder>Assets/maps/</folder>
  </map>
  <scene>
    <music path="Assets/Audio/music/music.ogg"/>
    <texture screen="Assets/Textures/Screens/screens_finished.png"/>
  </scene>
  <ui>
    <ui fontPath="Assets/ui/white.png" livesTexturePath = "Assets/ui/lives.png"/>
  </ui>
</config>